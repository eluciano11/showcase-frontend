{{view 'alerts'}}
<img {{bind-attr src=model.cover class=":sp-cover-image"}}>
<div class="sp-header">
	<h1>{{model.title}}</h1>
	<p>{{model.summary}}</p>
	<p>{{transform-date model.createdAt}}</p>
</div>
<div class="col-md-offset-1">
	<div class="sp-content">
		<div class="col-md-12">
			<div class="col-md-offeset-1 col-md-10">
				<img {{bind-attr src=model.screenshot class=":sp-screenshot"}}>
			</div>
		</div>
		<div class="col-md-12">
			<div class="col-md-offset-1 col-md-8 sp-story">
				<p>{{model.story}}</p>
			</div>
		</div>
	</div>
</div>
