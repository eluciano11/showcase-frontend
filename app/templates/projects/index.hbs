<div class="col-md-12">
	<div class="header text-center">
		<h1>Projects</h1>
		{{#if session.isAuthenticated}}
			<p>Share your project expiriences with others {{link-to "here" "projects.add"}}.</p>
		{{else}}
			<p>{{link-to "Register" "users.register"}} to showcase your project. <br>
			If you have an account you can login {{link-to "here" "login"}}.</p>
		{{/if}}
	</div>
	<div class="col-md-offset-3">
		<div class="col-md-8">
			<hr>
			<div class="projects">
				<div class="text-center">
					{{#if model}}
						{{#each project in model}}
							{{#if project}}
								<div class="project">
									<h2>{{project.title}}</h2>
									<p>{{project.summary}}</p>
									<p>Published {{transform-date project.createdAt}}</p>
										{{link-to "Read More" "projects.specific" project.id}}
									<hr>
								</div>
							{{/if}}
						{{/each}}
					{{else}}
						<div class="nothing-found">
							<h1>
								No projects to display.
							</h1>
						</div>
					{{/if}}
				</div>
			</div>
		</div>
	</div>
</div>