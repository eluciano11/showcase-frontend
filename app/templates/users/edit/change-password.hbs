<div class="col-md-12">
	<div class="header text-center">
		<h1>Change Password</h1>
		<p>You can change other settings {{link-to "here" "users.edit"}}.</p>
	</div>
</div>
<div class="col-md-offset-3">
	<div class="col-md-8">
		{{#if updateSuccess}}
			<div class="alert alert-success" role="alert">
				<button type="button" class="close" data-dismiss="alert" aria-label="Close">
					<span {{action 'dismiss'}} aria-hidden="true">&times;</span>
				</button>
				<strong>Your password was changed successfully.</strong>
			</div>
		{{/if}}
		{{#if updateFail}}
			<div class="alert alert-danger" role="alert">
				<button type="button" class="close" data-dismiss="alert" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
				<strong>An error occurred, your password was not changed.</strong>
			</div>
		{{/if}}
		<form {{action "update" on="submit"}}>
			<div class="form-group">
				<label for="currentPassword">Current password</label>
				{{input id="currentPassword" class="form-control" value=currentPassword type="password" disabled=updateSuccess required="required"}}
			</div>
			<div class="form-group">
				<label for="password1">New Password</label>
				{{input id="password1" class="form-control" value=password1 type="password" disabled=updateSuccess required="required"}}
			</div>
			<div class="form-group">
				<label for="password2">Confirm New Password</label>
				{{input id="password2" class="form-control" value=password2 type="password" disabled=updateSuccess required="required"}}
			</div>
			<button class="btn btn-success btn-lg btn-block" type="submit">Change Password</button>
		</form>	
	</div>
</div>